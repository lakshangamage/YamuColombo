<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".view.LoginActivity"
    android:background="@mipmap/login_background">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.9"
                android:layout_marginTop="120dp">

                <EditText
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:text="Name"
                    android:ems="10"
                    android:id="@+id/register_nametxt"
                    android:layout_weight="1"
                    android:background="#ccd1d1d1"
                    android:layout_marginBottom="10dp"
                    android:hint="Name"
                    android:textColor="#000000"
                    android:textColorHint="#000000"
                    android:textAlignment="center"
                    android:editable="true"
                    android:enabled="true" />

                <EditText
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textEmailAddress"
                    android:ems="10"
                    android:id="@+id/register_emailTxt"
                    android:editable="true"
                    android:enabled="true"
                    android:textAlignment="center"
                    android:singleLine="true"
                    android:hint="Username"
                    android:layout_weight="1"
                    android:background="#ccd1d1d1"
                    android:textColor="#000000"
                    android:textColorHighlight="#000000"
                    android:textColorHint="#000000"
                    android:layout_marginLeft="0dp"
                    android:layout_marginRight="0dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginBottom="10dp" />

                <EditText
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword"
                    android:ems="10"
                    android:id="@+id/register_passwordtxt"
                    android:layout_marginLeft="0dp"
                    android:layout_marginRight="0dp"
                    android:hint="Password"
                    android:textAlignment="center"
                    android:background="#ccd1d1d1"
                    android:layout_weight="1"
                    android:password="true"
                    android:textColor="@color/bright_foreground_inverse_material_dark"
                    android:textColorHint="@color/abc_input_method_navigation_guard"
                    android:layout_marginTop="0dp"
                    android:layout_marginBottom="0dp"
                    android:editable="true"
                    android:enabled="true" />

                <EditText
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword"
                    android:ems="10"
                    android:id="@+id/register_repasswordtxt"
                    android:layout_weight="1"
                    android:layout_marginTop="10dp"
                    android:background="#ccd1d1d1"
                    android:textColor="#000000"
                    android:textColorHint="#000000"
                    android:hint="Re-enter Password"
                    android:textAlignment="center"
                    android:editable="true"
                    android:enabled="true" />

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_weight="2.5">

                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Sign Un"
                    android:id="@+id/register_signupbtn"
                    android:layout_gravity="center_horizontal"
                    android:background="#fedc00"
                    android:textStyle="bold"
                    android:clickable="true"
                    android:enabled="true"
                    android:layout_marginTop="20dp" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
