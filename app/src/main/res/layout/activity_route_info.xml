<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.phrixus.yamucolombo.yamucolomboversion10.view.RouteInfoActivity"
    android:background="@mipmap/login_background">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="120dp"
        android:weightSum="1">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="80dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="255"
            android:id="@+id/routeinfo_routenotxt"
            android:textSize="60dp"
            android:textAlignment="center"
            android:textColor="#040404"
            android:background="#ecffffff"
            android:gravity="center_vertical" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Route"
            android:id="@+id/routeinfo_from_totxt"
            android:layout_gravity="left"
            android:background="#c1fcef61"
            android:gravity="left"
            android:textColor="#000000"
            android:textSize="20dp"
            android:scrollbars="vertical"
            android:layout_marginTop="20dp" />

        <ImageButton
            android:layout_width="72dp"
            android:layout_height="66dp"
            android:id="@+id/routeinfo_mapbtn"
            android:background="@drawable/yamucolombo_map_icon"
            android:layout_weight="0.10"
            android:layout_gravity="bottom"
            android:layout_marginTop="110dp"
            android:layout_marginLeft="250dp" />
    </LinearLayout>

</RelativeLayout>
